#!/bin/sh
# postinst script for lshell
#
# $Id: postinst,v 1.7 2009-01-25 18:24:26 ghantoos Exp $
#

#DEBHELPER#

set -e

case "$1" in
    configure)
	# add lshell group, and make it own the default log file
	groupadd lshellg
	touch /var/log/lshell.log
	chown root:lshellg /var/log/lshell.log
	chmod 664 /var/log/lshell.log
	/usr/sbin/add-shell /usr/bin/lshell
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

exit 0


