#!/bin/sh
# postrm script for lshell
#
# see: dh_installdeb(1)
#
# $Id: lshell.postrm,v 1.3 2009-06-15 19:13:18 ghantoos Exp $

set -e

case "$1" in
    remove|purge|disappear)
        if [ -x /usr/sbin/remove-shell ] && [ -f /etc/shells ]; then
            remove-shell /usr/bin/lshell 
        fi
        pycentral pkgremove lshell
        ;;
    upgrade|failed-upgrade|abort-upgrade|abort-install)
        # do nothing
        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
